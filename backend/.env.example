# Server Configuration
PORT=5000
FRONTEND_URL=http://localhost:5173
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/music_platform"

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Spotify API Credentials
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Spotify Redirect URI
# MUST match the Redirect URI set in Spotify Dashboard
# Example: http://localhost:5000/api/spotify/callback (local)
# Example: https://yourdomain.com/api/spotify/callback (production)
SPOTIFY_REDIRECT_URI=http://localhost:5000/api/spotify/callback

# Admin Authentication (temporary - will be replaced with JWT/Supabase)
ADMIN_SECRET=your-super-secret-admin-key-123
